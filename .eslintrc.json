{
    "env": {
        "es2021": true,
        "node": true,
        "jest":true
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "no-import-assign": "off",
        "no-shadow": "off",
        "no-console": "off",
        "import/extensions": [
            "error",
            "ignorePackages",
            {
              "js": "never",
              "ts": "never"
            }
         ],
         "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
         "@typescript-eslint/no-unused-vars":["error", { "argsIgnorePattern": "^_" }]
    },
    "settings": {
        "import/resolver": {
          "node": {
            "extensions": [".js", ".ts"]
          }
        }
    }
}
